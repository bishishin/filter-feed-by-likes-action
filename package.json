{
  "name": "filter-feed-by-likes-action",
  "description": "いいね数などで記事を評価しフィルタしたフィードを生成する",
  "version": "0.1.0",
  "author": "bishishin",
  "keywords": [
    "actions",
    "node"
  ],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "lint-biome": "biome check --apply .",
    "lint-feat": "gherkin-utils format features/main.feature && gherkin-lint",
    "lint": "npm run lint-feat && npm run lint-biome",
    "package": "ncc build src/index.ts --license licenses.txt",
    "bundle": "npm run lint && npm run package",
    "test-type": "tsc --noEmit",
    "test-feat": "cucumber-js",
    "test-unit": "node --require esbuild-register --test test/main.test.ts",
    "test": "concurrently \"npm run test-*\"",
    "all": "npm run test && npm run bundle"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@effect/platform": "^0.41.0",
    "@effect/platform-node": "^0.41.0",
    "@effect/schema": "^0.59.1",
    "effect": "^2.0.3",
    "feed": "^4.2.2",
    "rambda": "^8.6.0",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "@cucumber/cucumber": "^10.2.1",
    "@cucumber/gherkin-utils": "^8.0.5",
    "@types/chai": "^4.3.11",
    "@types/node": "^20.11.0",
    "@vercel/ncc": "^0.38.1",
    "chai": "^5.0.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.19.11",
    "esbuild-register": "^3.5.0",
    "gherkin-lint": "^4.2.4",
    "typescript": "^5.3.3"
  },
  "volta": {
    "node": "20.10.0",
    "npm": "10.2.5"
  }
}
